<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="300dp">

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="30"
                android:textSize="100sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tempText"
                android:text="°"
                android:textSize="64dp" />

            <LinearLayout
                android:id="@+id/aqiLayout"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tempText"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="18dp"
                android:layout_toEndOf="@id/tempText"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/skyConText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阴"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:background="#707070" />

                    <TextView
                        android:id="@+id/aqiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="良"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/aqiValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="83"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/ic_right" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="比昨天高2°C"
                    android:textSize="10sp"
                    android:textColor="#707070"/>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/section_weather_forecast" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider" />

        <include layout="@layout/section_weather_detail" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>